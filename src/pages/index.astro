---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Player from '../components/Player';
import AlbumCard from '../components/AlbumCard';
import { getCollection } from 'astro:content';

const albums = await getCollection('albums');
const albumEntries = albums.map((a) => ({ id: a.id, ...a.data }));
---

<!doctype html>
<html lang="en">
	<head>
    <BaseHead title="LoftwahFM" description="A black & white, mobile-first music app." />
	</head>
	<body>
		<Header />
        <main class="space-y-4 mx-auto max-w-5xl px-4">
            <h1 class="text-2xl font-bold">LoftwahFM</h1>
            {albumEntries.length > 0 ? (
                <section class="grid grid-cols-2 gap-3 sm:grid-cols-3 md:grid-cols-4">
                    {albumEntries.map((a) => (
                        <AlbumCard album={a as any} client:idle />
                    ))}
                </section>
            ) : (
                <p>No albums found.</p>
            )}
            <Player albums={albumEntries as any} client:load />
        </main>
		<Footer />
	</body>
</html>
