---
/* @ts-nocheck */
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Player from '../components/Player';
import AlbumCard from '../components/AlbumCard';
import { getCollection } from 'astro:content';

const albums = await getCollection('albums');
const albumEntries = albums.map((a) => ({ id: a.id, ...a.data }));
// Precompute counts for the All Songs virtual album
const totalTracks = albumEntries.reduce((sum, a) => sum + (a.tracks?.length || 0), 0);
const totalVideos = albumEntries.reduce((sum, a) => sum + (a.videos?.length || 0), 0);

// Force SSR so OG tags are built from the actual request origin (Workers/preview)
export const prerender = false;
---

<!doctype html>
<html lang="en">
	<head>
    <BaseHead
      title="Loftwah FM — Loftwah’s personal music player"
      description="LoftwahFM is my personal music player: a clean, black‑and‑white place where I share what I make and listen to it anywhere. Browse albums, play tracks and videos, and share links that generate proper previews across the web. Built for speed, simplicity, and a distraction‑free experience."
      image="/fm-og.jpg"
      ogType="music.playlist"
      ogAuthor="Loftwah"
    />
	</head>
	<body>
		<Header />
        <main class="space-y-6 mx-auto max-w-6xl px-4 mt-6 mb-28">
            <section class="panel p-3">
                <p class="text-sm">
                    LoftwahFM is my own music player — a minimal, fast place to share my work and play it anywhere. Explore albums, listen or watch, and copy links that unfurl with proper previews. No noise, just the music.
                </p>
            </section>
            {albumEntries.length > 1 ? (
                <section class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4">
                    {([
                      { id: 'all', slug: 'all', title: 'All Songs', artist: 'Loftwah', year: new Date().getFullYear(), cover: '/all-songs.jpg', tracks: Array.from({ length: totalTracks }), videos: Array.from({ length: totalVideos }) },
                      { id: 'playlist', slug: 'playlist', title: 'My Playlist', artist: 'Loftwah', year: new Date().getFullYear(), cover: '/playlist.jpg', tracks: [] },
                      ...albumEntries,
                    ]).map((a) => (
                        // @ts-ignore Astro client directive
                        <AlbumCard album={a as any} client:idle />
                    ))}
                </section>
            ) : albumEntries.length === 0 ? (
                <p>No albums found.</p>
            ) : null}
            <!-- @ts-ignore Astro client directive -->
            <div id="player">
              <Player albums={albumEntries as any} client:load />
            </div>
        </main>
		<Footer />
	</body>
</html>
