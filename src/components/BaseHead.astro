---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string; // absolute or root-relative path
  ogType?: string;
  ogAudio?: string;
  ogVideo?: string;
  ogAuthor?: string;
}

// Prefer the runtime request origin (Workers/custom domain). Fallback to configured site.
const siteOrigin = (Astro?.url?.origin ?? Astro.site) as string;
const canonicalURL = new URL(Astro.url.pathname, siteOrigin);

// Defaults
const {
  title,
  description = 'Loftwah FM is my personal SunoAI music player â€” stream albums and videos at fm.loftwah.com.',
  image = '/fm-og.jpg',
  ogType = 'website',
  ogAudio,
  ogVideo,
  ogAuthor,
} = Astro.props as Props;
const siteName = 'Loftwah FM';
const ogImageURL = new URL(image, siteOrigin);
const siteLogoURL = new URL('/android-chrome-512x512.png', siteOrigin);
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" href="/favicon.ico" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="manifest" href="/manifest.webmanifest" />
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph -->
<meta property="og:type" content={ogType} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:site_name" content={siteName} />
<meta property="og:image" content={ogImageURL} />
<meta property="og:image:alt" content={title} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
{ogAudio && (<meta property="og:audio" content={new URL(ogAudio, siteOrigin)} />)}
{ogVideo && (<meta property="og:video" content={new URL(ogVideo, siteOrigin)} />)}
{ogAuthor && (<meta name="author" content={ogAuthor} />)}
<meta name="theme-color" content="#000000" />

<!-- Twitter / X -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImageURL} />
<meta name="twitter:url" content={canonicalURL} />

<!-- JSON-LD for site and a MusicAlbum listing when applicable -->
<script type="application/ld+json">
  {JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'Organization',
    name: siteName,
    url: String(canonicalURL),
    logo: String(siteLogoURL),
  })}
  </script>
<script type="application/ld+json">
  {JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'WebSite',
    name: siteName,
    url: String(canonicalURL),
    description,
  })}
  </script>
